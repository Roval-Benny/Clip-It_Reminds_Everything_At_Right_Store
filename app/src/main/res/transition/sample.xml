<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- changeBounds is used for the TextViews which are shared -->

    <changeBounds />



    <!-- changeImageTransform is used for the ImageViews which are shared -->

    <changeImageTransform />

    <slide xmlns:android="http://schemas.android.com/apk/res/android"
        android:slideEdge="right"
        android:duration="1000">

        <targets>

            <!-- if using a custom Toolbar container, specify the ID of the AppBarLayout -->
            <target android:excludeId ="@+id/image_view_in_collapse_toolbar_view_at_category_view_main" />
            <target android:excludeId="@android:id/statusBarBackground"/>
            <target android:excludeId="@android:id/navigationBarBackground"/>
        </targets>

    </slide>



</transitionSet>

