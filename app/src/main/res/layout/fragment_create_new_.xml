<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/material_strong_grey_10"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/material_new_grey_lite_20"
        android:elevation="4dp"
        app:title="Create"
        app:navigationIcon="@drawable/ic_arrow_black"
        app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:id="@+id/toolbar_create"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/toolbar_shadow"
        android:layout_gravity="top"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/create_activity_layout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout

        android:id="@+id/linearLayout_create"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyceler_view_create_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="45dp"
     />

    </LinearLayout>

    <View
        android:id="@+id/view_at_create_bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bottom_app_bar_shadow"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:id="@+id/create_bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/material_new_grey_lite_20"
        android:orientation="horizontal"
        >

        <android.support.design.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_new_category_button"
            android:textSize="16sp"
            android:textAlignment="center"
            android:backgroundTint="@color/material_new_grey_lite_20"
            app:rippleColor="@color/white_with_gray"
            app:cornerRadius="4dp"
            app:strokeWidth="2dp"
            app:icon="@drawable/ic_add_box_black_24dp"
            app:iconTint="@color/material_new_grey_strong_100"
            app:iconPadding="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <android.support.design.button.MaterialButton
                android:id="@+id/create_select_date_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/material_new_grey_lite_20"
                android:text="@string/_22_oct_2018"
                android:textColor="@color/material_new_brown_strong_50"
                android:textSize="16sp"
                app:cornerRadius="4dp"
                app:rippleColor="@color/white_opacity_20" />

        </LinearLayout>






    </LinearLayout>




</android.support.design.widget.CoordinatorLayout>