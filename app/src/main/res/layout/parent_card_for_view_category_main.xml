<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="-10dp"
        >


        <android.support.design.chip.Chip
            android:id="@+id/location_chip_for_expandable_listview_in_category_view_main"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="10dp"
            android:visibility="visible"
            app:chipBackgroundColor="@color/new_material_blue_10"
            app:chipCornerRadius="15dp"
            app:chipIcon="@drawable/ic_outline_location_on_24_blue_px"
            app:chipIconSize="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Chip"
            app:chipStartPadding="2dp"
            app:closeIconEndPadding="1dp"
            app:closeIconSize="17dp"
            app:iconEndPadding="3dp"
            app:chipText="Place"
            app:layout_maxWidth="250dp"
            app:textEndPadding="2dp"
            app:textStartPadding="1dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/material_new_brown_strong_20"
            android:layout_marginStart="35dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            />
        <ImageButton
            android:contentDescription="@string/refresh_button"
            android:id="@+id/restore_button_at_view_category_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:layout_gravity="end|center_vertical"
            android:tint="@color/material_new_blue_strong_200"
            android:src="@drawable/ic_restore"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>