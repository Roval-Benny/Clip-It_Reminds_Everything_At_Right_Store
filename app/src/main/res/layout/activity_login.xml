<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginDirectory.LoginActivity"
    android:background="@color/white"
    >



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/tool_bar_at_login_activity"
        app:navigationIcon="@drawable/ic_arrow_black"
        android:layout_marginTop="10dp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verify_your_phone_number"
            android:textSize="24sp"
            android:textColor="@color/material_new_blue_strong_200"
            android:layout_margin="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:textAlignment="center"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_login_please_enter_phone_no"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:textSize="15sp"
        android:textColor="@color/material_new_grey_strong_100"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
    <Spinner
        android:id="@+id/spinnerCountry"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="142dp"
        />
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_new_blue_strong_200"

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="30dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/country_code_view_in_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_93"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginStart="35dp"
            android:textColor="@color/material_new_brown_strong_50"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="35dp"
                android:background="@color/material_new_blue_strong_200"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            >
    <EditText
            android:id="@+id/editTextMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:hint="@string/phone_number"
            android:background="@drawable/edit_text_look"
            android:backgroundTint="@color/white"
            android:inputType="phone"
            android:maxLength="20"
        />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/material_new_blue_strong_200"

                />

        </LinearLayout>

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    >
    <TextView
        android:id="@+id/skip_login_at_activity_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skip_login"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:textColor="@color/material_new_blue_strong_200"
        android:textStyle="italic"
        />

      <android.support.design.button.MaterialButton
          android:layout_width="150dp"
          android:id="@+id/buttonContinue"
          android:layout_height="50dp"
          style="@style/Widget.MaterialComponents.Button"
          android:text="@string/next"
          android:textSize="17sp"
          app:cornerRadius="4dp"
          android:textColor="@color/white"
          android:layout_gravity="bottom|center_horizontal"
          android:layout_marginBottom="20dp"
          android:backgroundTint="@color/new_material_strong_blue_100"
          />
</LinearLayout>
    </android.support.design.widget.CoordinatorLayout>