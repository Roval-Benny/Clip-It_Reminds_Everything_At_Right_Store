<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/itemCardEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="1dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <CheckBox
                android:layout_marginTop="5dp"
                android:id="@+id/checkBoxItem_at_bottom_sheet"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:buttonTint="@color/material_new_brown_strong_50"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox">
            </CheckBox>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/material_new_brown_strong_50"
                android:text="@string/fever"
                android:layout_marginTop="6dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textSize="20sp"
                android:id="@+id/item_textview_for_bottom_sheet"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>