<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="-10dp"
        >


        <android.support.design.chip.Chip
            android:id="@+id/category_chip_for_expandable_listview_in_at_pendin_intent"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:clickable="true"
            android:focusable="true"
            android:minWidth="75dp"
            android:layout_margin="10dp"
            android:visibility="visible"
            app:chipBackgroundColor="@color/new_material_blue_10"
            app:chipCornerRadius="15dp"
            app:chipIconSize="20dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Chip"
            app:chipStartPadding="2dp"
            app:closeIconEndPadding="1dp"
            app:closeIconSize="17dp"
            app:iconEndPadding="3dp"
            android:text="@string/atm"
            android:textAlignment="center"
            android:textSize="15sp"
            android:padding="5dp"
            app:layout_maxWidth="250dp"
            app:textEndPadding="2dp"
            app:textStartPadding="1dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/material_new_brown_strong_20"
            android:layout_marginStart="35dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>