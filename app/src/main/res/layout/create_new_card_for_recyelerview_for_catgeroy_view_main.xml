<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_create_card"
    android:background="@android:color/transparent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        app:cardPreventCornerOverlap="true"
        android:clickable="true"
        app:strokeColor="@color/materialGrey"
        app:strokeWidth=".5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                >

                <android.support.design.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                </android.support.design.chip.ChipGroup>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_chip_location"
                    android:layout_marginTop="10dp"
                    >
                    <AutoCompleteTextView
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_create_activity_background"
                        android:id="@+id/place_auto_complete_text_create_for_category_view"
                        android:layout_width="140dp"
                        android:layout_height="20dp"
                        android:backgroundTint="@color/white"
                        android:maxLength="14"
                        android:hint="@string/place_dot"
                        android:maxLines="1"
                        android:textColorHint="@color/black"
                        android:paddingStart="1dp"
                        android:paddingEnd="0dp"
                        android:textSize="15sp"
                        android:visibility="visible"/>

                </LinearLayout>


            </LinearLayout>

            <EditText
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_edit_text_in_category_view"
                android:background="@drawable/edit_text_look"
                android:minHeight="70dp"
                android:hint="@string/items"
                android:textAlignment="textStart"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                android:inputType="textMultiLine|textCapWords"
                android:textSize="20sp"
                android:textColor="@color/black"

                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>