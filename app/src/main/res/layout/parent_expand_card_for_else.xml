<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_strong_grey_10">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="-4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_of_day_home_list_view_second_layout"
                    android:text="@string/monday"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/new_material_borrown_20"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="5dp"
                    />

                <ImageButton
                    android:contentDescription="@string/expand_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_expand_less_black_24dp"
                    android:backgroundTint="@color/white"
                    />

                <TextView

                    android:id="@+id/date_home_list_view_second_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:text="@string/_22_oct_2018"
                    android:textColor="@color/material_new_brown_strong_50"
                    android:textSize="10pt"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

