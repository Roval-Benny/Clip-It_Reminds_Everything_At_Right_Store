<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/material_strong_grey_10"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"

            >

            <ImageButton
                android:contentDescription="@string/category_icon"
                android:id="@+id/image_catergory_view_at_bottom_sheet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:layout_margin="5dp"
                android:tint="@color/material_new_blue_strong_200"
                android:src="@drawable/ic_pharmacy"
                />

            <TextView
                android:id="@+id/category_text_view_in_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hospital"
                android:textSize="6pt"
                android:textColor="@color/material_new_blue_strong_200"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>