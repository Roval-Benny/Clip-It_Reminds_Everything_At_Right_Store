<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingBottom="1.5dp"
    android:background="@color/material_strong_grey_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/monday"
                android:textSize="7pt"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textStyle="bold"
                android:textColor="@color/new_material_borrown_20"
                android:id="@+id/parent_card_for_3_text_date"
                />

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_22_oct_2018"
                android:textSize="10pt"
                android:id="@+id/parent_card_for_3_text_today"
                android:textColor="@color/material_new_brown_strong_50"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="4dp"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:id="@+id/parent_today_for_3_image_1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bank"
                            android:visibility="gone"
                            />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="4dp"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:id="@+id/parent_today_for_3_image_2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bar"
                            android:visibility="gone"
                            />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="4dp"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:id="@+id/parent_today_for_3_image_3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bus_station"
                            android:visibility="gone"
                            />
                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>