<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deleteCArdView"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:contentDescription="@string/category_image"
                android:id="@+id/image_view_at_delete_card"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/school"
                android:scaleType="centerCrop"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteCategory"
            android:text="@string/school"
            android:paddingTop="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="5dp"
            android:textColor="@color/material_new_brown_strong_50"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteItems"
            android:text="@string/pencil"
            android:textColor="@color/material_new_grey_strong_50"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            />

        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>