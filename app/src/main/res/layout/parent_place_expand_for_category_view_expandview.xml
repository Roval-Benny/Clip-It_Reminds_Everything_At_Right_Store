<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        >


        <android.support.design.chip.Chip
            android:id="@+id/location_chip_for_expandable_listview_in_category_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="10dp"
            android:visibility="visible"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="0dp"
            app:chipIcon="@drawable/ic_location_on_black_24dp"
            app:chipIconSize="20dp"
            app:chipStartPadding="2dp"
            app:chipText="Neeloor"
            app:closeIconEndPadding="1dp"
            app:closeIconSize="17dp"
            app:iconEndPadding="3dp"
            app:layout_maxWidth="250dp"
            app:textEndPadding="2dp"
            app:textStartPadding="1dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/material_new_brown_strong_20"
            android:layout_marginStart="35dp"
            android:layout_gravity="bottom"
            />
        <ImageButton
            android:contentDescription="@string/refresh_button"
            android:id="@+id/restore-button_at_view_category"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:layout_margin="15dp"
            android:layout_gravity="end"
            android:tint="@color/black"
            android:src="@drawable/ic_restore"
            />

    </android.support.v7.widget.CardView>

</LinearLayout>